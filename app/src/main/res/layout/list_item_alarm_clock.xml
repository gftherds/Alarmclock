<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/clock_alarm"
            android:layout_alignBottom="@+id/list_name"
            android:layout_toLeftOf="@+id/list_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </ImageView>



        <TextView
            android:id="@+id/list_time"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/list_name"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:gravity="center"
            android:text="@string/set_up_name"
            android:layout_below="@+id/list_time"
            android:layout_alignLeft="@+id/list_time"
            android:layout_alignStart="@+id/list_time"
            android:layout_alignParentBottom="true"
            android:padding="14dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>